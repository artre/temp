@import '../node_modules/nib'
@import 'styl/variables'
@import 'styl/mixins'
@import 'styl/buttons'



// Learn what is "typographics" and "nib" and what plugins are better. can u choose different plugins.

add(a, b, c = a)
	a + b + c
	
marg(a, b)
	return a a/2 a*5 a*b
	
// rupture.scale = 0 400px 600px 800px 1050px 1800px
